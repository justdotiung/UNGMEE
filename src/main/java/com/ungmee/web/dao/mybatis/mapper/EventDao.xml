<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="ungmee.web.dao.EventDao">

 	<select id="get" resultType="ungmee.web.entity.Event">
		SELECT * FROM EVENT WHERE id = #{id}
	</select>
	
	<select id="getList" resultType="ungmee.web.entity.Event">
		SELECT * FROM EVENT ORDER BY REGDATE DESC
	</select>
	
	<select id="getLastId" resultType="Integer">
		SELECT ID FROM (SELECT * FROM EVENT ORDER BY REGDATE DESC) WHERE ROWNUM=1
	</select>
	
 	<insert id="insert" parameterType="ungmee.web.entity.Event">
		<!-- <selectKey keyProperty="id" resultType="Integer">
		select nvl(id,0)+1 id from (select * from NOTICE order by regDate desc) where rownum = 1
		</selectKey> -->
		INSERT INTO EVENT(CATEGORY,CONTENT,ADMIN_ID)
		VALUES(#{category},#{content},#{adminId})
	</insert>
	
	<update id="update" parameterType="ungmee.web.entity.Event">
		UPDATE EVENT 
		SET 
			category=#{category},
			content=#{content} 
			WHERE ID =${id}
	</update>

	<delete id="delete" parameterType="Integer">
		DELETE EVENT
		WHERE ID=#{id}
	</delete>
 </mapper>